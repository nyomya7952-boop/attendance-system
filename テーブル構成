usersテーブル		
	id	unsigned bigint
	name	varchar(50)
	email	varchar(255)
	email_verified_at	timestamp
	password	varchar(255)
	remember_token	varchar(100)
	role_id	unsigned bigint
	created_at	timestamp
	updated_at	timestamp
	※外部キー: role_id -> roles.id
	※インデックス: email (unique), role_id
		
		
		
		
attendancesテーブル		
	id	unsigned bigint
	user_id	unsigned bigint
	work_date	date
	started_at	datetime
	ended_at	datetime
	status	varchar(20)
	total_break_minutes	int
	total_work_minutes	int
	created_at	timestamp
	updated_at	timestamp
	※外部キー: user_id -> users.id
	※インデックス: user_id, work_date, (user_id, work_date) unique
	※status: 'draft', 'submitted', 'approved', 'rejected' など
		
		
		
attendance_breaksテーブル		
	id	unsigned bigint
	attendance_id	unsigned bigint
	break_start_at	datetime
	break_end_at	datetime
	created_at	timestamp
	updated_at	timestamp
	※外部キー: attendance_id -> attendances.id (on delete cascade)
	※インデックス: attendance_id
		
		
		
		
		
		
		
attendance_requestsテーブル		
	id	unsigned bigint
	attendance_id	unsigned bigint
	parent_request_id	unsigned bigint
	requested_started_at	datetime
	requested_ended_at	datetime
	reason	varchar(255)
	requested_by	unsigned bigint
	approver_id	unsigned bigint
	status	varchar(20)
	created_at	timestamp
	updated_at	timestamp
	※外部キー: attendance_id -> attendances.id (nullable), parent_request_id -> attendance_requests.id (nullable), requested_by -> users.id, approver_id -> users.id (nullable)
	※インデックス: attendance_id, parent_request_id, requested_by, approver_id, status
	※status: 'pending', 'approved', 'rejected'
	※parent_request_id: 修正申請の場合、元の申請IDを参照（NULLの場合は初回申請）
		
		
		
		
		
attendance_request_breaksテーブル		
	id	unsigned bigint
	attendance_request_id	unsigned bigint
	break_start_at	datetime
	break_end_at	datetime
	created_at	timestamp
	updated_at	timestamp
	※外部キー: attendance_request_id -> attendance_requests.id (on delete cascade)
	※インデックス: attendance_request_id
		
		
		
		
		
		
		
attendance_approvalsテーブル		
	id	unsigned bigint
	attendance_id	unsigned bigint
	attendance_request_id	unsigned bigint
	approved_by	unsigned bigint
	approved_at	timestamp
	status	varchar(20)
	rejection_reason	varchar(255)
	final_started_at	datetime
	final_ended_at	datetime
	final_break_minutes	int
	final_work_minutes	int
	created_at	timestamp
	updated_at	timestamp
	※外部キー: attendance_id -> attendances.id, attendance_request_id -> attendance_requests.id, approved_by -> users.id
	※インデックス: attendance_request_id, approved_by, status
	※status: 'approved', 'rejected'
		
		
rolesテーブル		
	id	unsigned bigint
	name	varchar(20)
	created_at	timestamp
	updated_at	timestamp
	※インデックス: name (unique)
	※name例: 'employee', 'manager', 'admin' など
		
		
		
		
		
		
		
		
		
		
		